package atividade1;

public class Filme {
    private String nome;
    private int duracao;
    private String sinopse;
    private double valor;
    private double notas;
    private double nota;
    private int quant_crit;
    
    // Construtor
    public Filme(String nome, int duracao, String sinopse, double valor, double notas, double nota, int quant_crit) {
        this.nome = nome;
        this.duracao = duracao;
        this.sinopse = sinopse;
        this.valor = valor;
        this.notas = notas;
        this.nota = nota;
        this.quant_crit = quant_crit;
    }
    
    // MÃ©todos getters e setters para todos os atributos
    public String getNome() {
        return nome;
    }

    public void setNome(String nome) {
        this.nome = nome;
    }

    public int getDuracao() {
        return duracao;
    }

    public void setDuracao(int duracao) {
        this.duracao = duracao;
    }

    public String getSinopse() {
        return sinopse;
    }

    public void setSinopse(String sinopse) {
        this.sinopse = sinopse;
    }

    public double getValor() {
        return valor;
    }

    public void setValor(double valor) {
        this.valor = valor;
    }
    
    public double getNotas() {
    	return notas;
    }
    
    public void setNotas(double notas) {
    	this.notas = notas;
    }
    
    public double getNota() {
    	return nota;
    }
    
    public void setNota(double nota) {
    	this.nota = nota;
    }
    
    public int getQuant_crit() {
    	return quant_crit;
    } 
    
    public void setQuant_crit(int quant_crit) {
	    this.quant_crit = quant_crit;
    }
  
}
